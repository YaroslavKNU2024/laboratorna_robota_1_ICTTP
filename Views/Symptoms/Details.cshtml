@model LabaOne.Symptom

@{
    ViewData["Title"] = "Деталі";
}

<h1>Деталі обраного симптому</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SymptomName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SymptomName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Variants)
        </dt>
        @foreach(var c in Model.Variants)
        {
            <dd class = "col-sm-10">
            @Html.DisplayFor(model => c.VariantName)</dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a> |
    <a asp-action="Index">Назад до списку</a>
</div>
